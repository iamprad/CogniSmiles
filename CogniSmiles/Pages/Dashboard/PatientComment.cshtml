@page
@using CogniSmiles.Models
@model CogniSmiles.Pages.Dashboard.PatientCommentModel

@{
    ViewData["Title"] = "Add / Update Comments on Patient Record";
}

<h2>View Comments on Patient Record </h2>
    <hr />
<form method="post">
    @if (Model.DoctorComments.Count > 0)
    {
        <table class="table">
            <tbody>
                @foreach (var item in Model.DoctorComments)
                {
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.DoctorComments[0].Comment) :  @Html.DisplayFor(modelItem => item.Comment)
                        </td>
                        <td>
                            <input type="submit" value="Delete" class="btn btn-secondary" asp-page="PatientComment" asp-page-handler="DeleteComment" asp-route-CommentId="@item.Id" />
                            
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.DoctorComments[0].DoctorId) : @Html.DisplayFor(modelItem => item.DoctorId)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.DoctorComments[0].CommentDate): @Html.DisplayFor(modelItem => item.CommentDate)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <label class="text-black"> No comments added for this patient  </label>
    }
<hr />
<h2> Add Comments to a Patient Record </h2>

    <div class="row">
        <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                 <input type="hidden" asp-for="PatientId"/>
                    <label asp-for="NewComment.Comment" class="control-label"></label>
                    <textarea asp-for="PostedComment" class="form-control"></textarea>
                    <span asp-validation-for="PostedComment" class="text-danger"></span>                
             </div>
             <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" asp-page="PatientComment" asp-page-handler="AddComment"/>
             </div>
        </div>
    </div>
</form>
<div>
    <a asp-page="./Home">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
